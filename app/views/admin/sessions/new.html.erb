<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>管理者ログイン</h2>

      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <th><%= f.label :email, "メールアドレス" %></th>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com", size: 30 %></td>
            </tr>
            <tr>
              <th><%= f.label :password, "パスワード" %></th>
              <td><%= f.password_field :password, autocomplete: "current-password", size: 30 %></td>
            </tr>
          </tbody>
        </table>
      
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>  
    </div>
  </div>
</div>

<%= render "admin/shared/links" %>
