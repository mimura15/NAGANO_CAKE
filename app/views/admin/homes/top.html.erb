<h1>注文履歴一覧</h1>

<table class="table table-borderless">
	<thead class="thead-light">
		<tr>
			<th scope="col1">購入日時</th>
			<th scope="col1">購入者</th>
			<th scope="col1">注文個数</th>
			<th scope="col1">注文ステータス</th>
		</tr>
	</thead>
	
	<tbody>
		<% @orders.each do |order| %>
		<tr>
			<td><%= order.created_at %></td>
			<td><%= order.name %></td>
			<td></td>
			<td><%= order.status_i18n %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= paginate @orders %>