<div class="container">
	<div class="row">
		<div class="col-6">
			<h1>ジャンル編集</h1>

			<%= form_with model: @genre, url: admin_genre_path do |f| %>
				<table class="table table-borderless">
					<tbody>
						<tr>
							<th>ジャンル名</th>
							<td><%= f.text_field :name %></td>
							<td><%= f.submit '変更を保存する', class: 'btn btn-success' %></td>
						</tr>
					</tbody>
				</table>
			<% end %>	
		</div>
	</div>
</div>
