<div class="container">
	<div class="row">
		<div class="col-md-8">
			<h1>商品編集</h1>
			<%= form_with model: @item,url: admin_item_path(@item.id) do |f| %>
				<table class="table table-borderless">
					<tbody>
						<tr>
							<th>商品画像</th>
							<td><%= f.file_field :image, accept: "image/*" %></td>
						</tr>
						<tr>
							<th>商品名</th>
							<td><%= f.text_field :name %></td>
						</tr>
						<tr>
							<th>商品説明</th>
							<td><%= f.text_area :introduction %></td>
						</tr>
						<tr>
							<th>ジャンル</th>
							<td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
						</tr>
						<tr>
							<th>税抜価格</th>
							<td><%= f.text_field :price %>円</td>
						</tr>
						<tr>
							<th>販売ステータス</th>
							<td>
								<%= f.radio_button :is_active, true %>
								<%= f.label :is_active, "販売中", value: true %>
								<%= f.radio_button :is_active, false %>
								<%= f.label :is_active, "販売停止中", value: false %>
							</td>
						</tr>
					</tbody>
				</table>
				<div class="actions">
					<%= f.submit '変更を保存', class: 'btn btn-success' %>
				</div>
			<% end %>
		</div>
	</div>
</div>

	
	
	
