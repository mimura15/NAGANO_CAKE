<h2>配送先登録/一覧</h2>

<%= form_with model: @address, url: addresses_path do |f| %>
	<h4>郵便番号(ハイフンなし)</h4>
	<%= f.text_field :postal_code %>
	
	<h4>住所</h4>
	<%= f.text_field :address %>
	
	<h4>宛名</h4>
	<%= f.text_field :name %>
	
	<%= f.submit '新規登録' %>
<% end %>

<table class="table table-bordered">
	<thead class="thead-light">
		<tr>
			<th>郵便番号</th>
			<th>住所</th>
			<th>宛名</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @addresses.each do |address| %>
		<tr>
			<th><%= address.postal_code %></th>
			<th><%= address.address %></th>
			<th><%= address.name %></th>
			<th>
				<%= link_to edit_address_path(address.id) do %>
					<button type="button" class="btn btn-success">編集する</button>
				<% end %>
				<%= link_to address_path(address.id), method: :delete do %>
					<button type="button" class="btn btn-danger">削除する</button>
				<% end %>
			</th>
		</tr>
		<% end %>
	</tbody>
</table>