<h1>マイページ</h1>

<h2>登録情報</h2>
<%= link_to "編集する", edit_customer_path(@customer), class: "btn btn-success" %>

<table class="table table-bordered">
	<tbody>
		<tr>
			<th>氏名</th>
			<td><%= @customer.full_name %></td>
		</tr>
		<tr>
			<th>フリガナ</th>
			<td><%= @customer.full_name_kana %></td>
		</tr>
		<tr>
			<th>郵便番号</th>
			<td><%= @customer.postal_code %></td>
		</tr>
		<tr>
			<th>住所</th>
			<td><%= @customer.address %></td>
		</tr>
		<tr>
			<th>電話番号</th>
			<td><%= @customer.telephone_number %></td>
		</tr>
		<tr>
			<th>メールアドレス</th>
			<td><%= @customer.email %></td>
		</tr>
	</tbody>
</table>


<h2>配送先</h2>
<%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>

<h2>注文履歴</h2>
<%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
	