<h1>マイページ</h1>

<h2>登録情報</h2>
<%= link_to edit_customer_path(@customer) do %>
    <button type="button" class="btn btn-success">編集する</button>
<% end %>


<h4>氏名</h4>
<%= @customer.last_name %> <%= @customer.first_name %>

<h4>フリガナ</h4>
<%= @customer.last_name_kana %> <%= @customer.first_name_kana %>

<h4>郵便番号</h4>
<%= @customer.postal_code %>

<h4>住所</h4>
<%= @customer.address %>

<h4>電話番号</h4>
<%= @customer.telephone_number %>

<h4>メールアドレス</h4>
<%= @customer.email %>

<h2>配送先</h2>
<%= link_to addresses_path do %>
	<button type="button" class="btn btn-primary">一覧を見る</button>
<% end %>

<h2>注文履歴</h2>