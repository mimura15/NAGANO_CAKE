<div th:fragment="form">
  <h2>新規会員登録</h2>

  <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer' do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <div class="form-group form-inline input-group-sm">
    <span class="col-md-2"><%= f.label "名前" %></span>
    <div class="col-md-10">(姓) <%= f.text_field :last_name, :placeholder => "令和" %> (名) <%= f.text_field :first_name, :placeholder => "道子" %></div>
  </div>
  <div class="form-group form-inline input-group-sm">
    <span class="col-md-2"><%= f.label "フリガナ" %></span>
    <div class="col-md-10">(セイ) <%= f.text_field :last_name_kana, :placeholder => "レイワ" %> (メイ) <%= f.text_field :first_name_kana, :placeholder => "ミチコ" %></div>
  </div>
  <div class="form-group form-inline input-group-sm">
    <span class="col-md-2"><%= f.label "メールアドレス" %></span>
    <div class="col-md-10"><%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com" %></div>
  </div>
  <div class="form-group form-inline input-group-sm">
    <span class="col-md-2"><%= f.label "郵便番号(ハイフンなし)" %></span>
    <div class="col-md-10"><%= f.text_field :postal_code, :placeholder => "0000000" %></div>
  </div>
  <div class="form-group form-inline input-group-sm">
    <span class="col-md-2"><%= f.label "住所" %></span>
    <div class="col-md-10"><%= f.text_field :address, :placeholder => "東京都渋谷区代々木神園町0-0" %></div>
  </div>
  <div class="form-group form-inline input-group-sm">
    <span class="col-md-2"><%= f.label "電話番号(ハイフンなし)" %></span>
    <div class="col-md-10"><%= f.text_field :telephone_number, :placeholder => "0000000000" %></div>
  </div>
  <div class="form-group form-inline input-group-sm">
    <span class="col-md-2"><%= f.label "パスワード(6文字以上)" %></span>
    <div class="col-md-10"><%= f.password_field :password, autocomplete: "new-password" %></div>
  </div>
  <div class="form-group form-inline input-group-sm">
    <span class="col-md-2"><%= f.label "パスワード(確認用)" %></span>
    <div class="col-md-10"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
  </div>
  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
  <% end %>
  <h2>既に登録済みの方</h2>
  <%= link_to "こちら", new_customer_session_path %> からログインしてください。
</div>
